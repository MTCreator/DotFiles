# set window colors
#                       border             background         text                 indicator
client.focused          $fg                $fg                $bg                  $color0
client.unfocused        $bg                $bg                $fg                  $color0
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color $color0
